# ==============================================
# PRODUCTION ENVIRONMENT CONFIGURATION
# ==============================================
# Copy this file to .env for production deployment:
# cp prod.env .env
# ⚠️  IMPORTANT: Replace all placeholder values with real production values!

# Database - PostgreSQL for production
DATABASE_URL="postgresql://username:password@your-db-host:5432/mockauth"

# Authentication - Production URLs
NEXTAUTH_URL="https://your-domain.com"
# Generate secure secrets (minimum 32 characters):
# node -e "console.log(require('crypto').randomBytes(32).toString('base64'))"
NEXTAUTH_SECRET="CHANGE-THIS-TO-A-SECURE-RANDOM-SECRET-MIN-32-CHARS"
JWT_SECRET="CHANGE-THIS-TO-A-SECURE-RANDOM-SECRET-MIN-32-CHARS"

# Encryption - Generate your own:
# node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ENCRYPTION_KEY="CHANGE-THIS-TO-A-64-CHARACTER-HEX-STRING"

# Email Configuration - Required for production
SMTP_HOST="smtp.sendgrid.net"
SMTP_PORT="587"
SMTP_USER="apikey"
SMTP_PASS="your-sendgrid-api-key"
EMAIL_FROM="noreply@your-domain.com"

# Redis - Recommended for production (distributed rate limiting)
REDIS_URL="redis://your-redis-host:6379"

# Application Settings
NODE_ENV="production"
RESOURCE_EXPIRY_DAYS="30"

# Cleanup Cron Job - Enabled for production
CLEANUP_ENABLED="true"
CLEANUP_CRON="0 2 * * *"

# Docker/Database Password
DB_PASSWORD="your-secure-database-password"
