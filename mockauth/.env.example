# Database
DATABASE_URL="postgresql://user:password@localhost:5432/mockauth"
# For development with SQLite:
# DATABASE_URL="file:./dev.db"

# Authentication
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-super-secret-key-change-this-in-production-min-32-chars"
JWT_SECRET="your-jwt-secret-change-this-in-production-min-32-chars"

# Encryption (32-byte hex string)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ENCRYPTION_KEY="0123456789abcdef0123456789abcdef0123456789abcdef0123456789abcdef"

# Email Configuration
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"
EMAIL_FROM="noreply@mockauth.dev"

# Redis (Optional - for distributed rate limiting)
REDIS_URL="redis://localhost:6379"

# Application Settings
NODE_ENV="development"
RESOURCE_EXPIRY_DAYS="30"

# Cleanup Cron Job
CLEANUP_ENABLED="true"
CLEANUP_CRON="0 2 * * *"

# Optional: Database Password (for docker-compose)
DB_PASSWORD="mockauth_dev_password"
