// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  emailVerified DateTime?
  name          String?
  password      String
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts      Account[]
  sessions      Session[]
  oauthApps     OAuthApp[]
  samlEnvironments SamlEnvironment[]
  apiKeys       ApiKey[]
  auditLogs     AuditLog[]

  @@map("users")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

model OAuthApp {
  id                     String   @id @default(cuid())
  userId                 String
  name                   String
  description            String?
  clientId               String   @unique @default(cuid())
  clientSecret           String   // Hashed
  grantTypes             String[] // ['authorization_code', 'client_credentials', 'refresh_token', 'pkce']
  redirectUris           String[] @db.Text
  scopes                 String[] @default(["read:profile"])
  accessTokenLifetime    Int      @default(3600) // seconds
  refreshTokenLifetime   Int      @default(2592000) // 30 days
  autoApprove            Boolean  @default(false)
  isPublic               Boolean  @default(false)

  createdAt              DateTime @default(now())
  expiresAt              DateTime // 30 days from creation
  deletedAt              DateTime?

  user                   User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  tokens                 OAuthToken[]
  auditLogs              AuditLog[]

  @@index([userId])
  @@index([expiresAt])
  @@map("oauth_apps")
}

model OAuthToken {
  id                 String   @id @default(cuid())
  appId              String
  accessToken        String   @unique
  refreshToken       String?  @unique
  tokenType          String   @default("Bearer")
  scope              String[]
  expiresAt          DateTime

  userId             String?
  userEmail          String?
  userName           String?

  createdAt          DateTime @default(now())

  app                OAuthApp @relation(fields: [appId], references: [id], onDelete: Cascade)

  @@index([appId])
  @@index([expiresAt])
  @@map("oauth_tokens")
}

model SamlEnvironment {
  id                   String   @id @default(cuid())
  userId               String
  name                 String
  description          String?
  type                 String   // 'idp' or 'sp'

  // Core SAML Config
  entityId             String   @unique
  ssoUrl               String?
  sloUrl               String?
  acsUrl               String?  // For SP

  // Certificate & Keys (encrypted)
  certificate          String?  @db.Text
  privateKey           String?  @db.Text

  // IdP Metadata (from uploaded XML)
  idpMetadata          Json?

  // Attribute Mappings
  attributeMappings    Json?    // { "email": "http://schemas.xmlsoap.org/ws/2005/05/identity/claims/emailaddress", ... }

  // SAML Settings
  nameIdFormat         String   @default("urn:oasis:names:tc:SAML:1.1:nameid-format:emailAddress")
  assertionLifetime    Int      @default(600) // seconds
  signAssertions       Boolean  @default(true)
  signResponse         Boolean  @default(true)
  encryptAssertions    Boolean  @default(false)

  // Test Users
  testUsers            Json?    // [{ email, firstName, lastName, customAttributes }]

  createdAt            DateTime @default(now())
  expiresAt            DateTime // 30 days from creation
  deletedAt            DateTime?

  user                 User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  sessions             SamlSession[]
  auditLogs            AuditLog[]

  @@index([userId])
  @@index([expiresAt])
  @@map("saml_environments")
}

model SamlSession {
  id                String          @id @default(cuid())
  environmentId     String
  sessionId         String          @unique
  nameId            String
  sessionData       Json

  createdAt         DateTime        @default(now())
  expiresAt         DateTime

  environment       SamlEnvironment @relation(fields: [environmentId], references: [id], onDelete: Cascade)

  @@index([environmentId])
  @@index([expiresAt])
  @@map("saml_sessions")
}

model ApiKey {
  id          String    @id @default(cuid())
  userId      String
  name        String
  keyHash     String    @unique // Hashed API key
  keyPrefix   String    // First 8 chars for identification
  permissions String[]  @default(["read", "write"])
  lastUsedAt  DateTime?

  createdAt   DateTime  @default(now())
  expiresAt   DateTime?
  revokedAt   DateTime?

  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("api_keys")
}

model AuditLog {
  id              String    @id @default(cuid())
  userId          String
  action          String    // 'create', 'update', 'delete', 'login', etc.
  resourceType    String    // 'oauth_app', 'saml_environment', 'api_key'
  resourceId      String?
  metadata        Json?
  ipAddress       String?
  userAgent       String?

  oauthAppId      String?
  samlEnvironmentId String?

  createdAt       DateTime  @default(now())

  user            User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  oauthApp        OAuthApp? @relation(fields: [oauthAppId], references: [id], onDelete: SetNull)
  samlEnvironment SamlEnvironment? @relation(fields: [samlEnvironmentId], references: [id], onDelete: SetNull)

  @@index([userId])
  @@index([action])
  @@index([createdAt])
  @@map("audit_logs")
}
