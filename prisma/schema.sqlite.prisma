// Alternative Prisma Schema for SQLite (Quick Testing)
// To use this schema:
// 1. Copy this file over schema.prisma: cp prisma/schema.sqlite.prisma prisma/schema.prisma
// 2. Update DATABASE_URL in .env.local to: file:./dev.db
// 3. Run: npx prisma generate && npx prisma db push

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  emailVerified DateTime?
  name          String?
  password      String?   // Optional for OAuth users
  image         String?

  // Pricing Plan
  plan          String    @default("free") // free, pro, enterprise
  planExpiresAt DateTime?

  // Plan Limits
  maxOAuthApps  Int       @default(5)
  maxSamlEnvs   Int       @default(3)
  maxExpiry     Int       @default(30) // days
  apiAccess     Int       @default(0) // SQLite doesn't support Boolean, use 0/1

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts      Account[]
  sessions      Session[]
  oauthApps     OAuthApp[]
  samlEnvironments SamlEnvironment[]
  apiKeys       ApiKey[]
  auditLogs     AuditLog[]

  @@map("users")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

model OAuthApp {
  id                     String   @id @default(cuid())
  userId                 String
  name                   String
  description            String?
  clientId               String   @unique @default(cuid())
  clientSecret           String   // Hashed
  grantTypes             String   // JSON array
  redirectUris           String   // JSON array
  scopes                 String   @default("[\"read:profile\"]") // JSON array
  accessTokenLifetime    Int      @default(3600) // seconds
  refreshTokenLifetime   Int      @default(2592000) // 30 days
  autoApprove            Int      @default(0) // SQLite doesn't support Boolean
  isPublic               Int      @default(0) // SQLite doesn't support Boolean

  createdAt              DateTime @default(now())
  expiresAt              DateTime
  deletedAt              DateTime?

  user                   User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  tokens                 OAuthToken[]
  auditLogs              AuditLog[]

  @@map("oauth_apps")
}

model OAuthToken {
  id                 String   @id @default(cuid())
  appId              String
  accessToken        String   @unique
  refreshToken       String?  @unique
  tokenType          String   @default("Bearer")
  scope              String   // JSON array

  userId             String?
  userEmail          String?
  userName           String?

  createdAt          DateTime @default(now())
  expiresAt          DateTime

  app                OAuthApp @relation(fields: [appId], references: [id], onDelete: Cascade)

  @@map("oauth_tokens")
}

model SamlEnvironment {
  id                   String   @id @default(cuid())
  userId               String
  name                 String
  description          String?
  type                 String   // 'idp' or 'sp'

  // Core SAML Config
  entityId             String   @unique
  ssoUrl               String?
  sloUrl               String?
  acsUrl               String?

  // Certificate & Keys (encrypted)
  certificate          String?
  privateKey           String?

  // IdP Metadata
  idpMetadata          String?  // JSON string

  // Attribute Mappings
  attributeMappings    String?  // JSON string

  // SAML Settings
  nameIdFormat         String   @default("urn:oasis:names:tc:SAML:1.1:nameid-format:emailAddress")
  assertionLifetime    Int      @default(600) // seconds
  signAssertions       Int      @default(1) // SQLite doesn't support Boolean
  signResponse         Int      @default(1) // SQLite doesn't support Boolean
  encryptAssertions    Int      @default(0) // SQLite doesn't support Boolean

  // Test Users
  testUsers            String?  // JSON string

  createdAt            DateTime @default(now())
  expiresAt            DateTime
  deletedAt            DateTime?

  user                 User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  sessions             SamlSession[]
  auditLogs            AuditLog[]

  @@map("saml_environments")
}

model SamlSession {
  id                String          @id @default(cuid())
  environmentId     String
  sessionId         String          @unique
  nameId            String
  sessionData       String          // JSON string

  createdAt         DateTime        @default(now())
  expiresAt         DateTime

  environment       SamlEnvironment @relation(fields: [environmentId], references: [id], onDelete: Cascade)

  @@map("saml_sessions")
}

model ApiKey {
  id          String    @id @default(cuid())
  userId      String
  name        String
  keyHash     String    @unique
  keyPrefix   String
  permissions String    @default("[\"read\",\"write\"]") // JSON array

  lastUsedAt  DateTime?
  createdAt   DateTime  @default(now())
  expiresAt   DateTime?
  revokedAt   DateTime?

  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("api_keys")
}

model AuditLog {
  id              String    @id @default(cuid())
  userId          String
  action          String
  resourceType    String
  resourceId      String?
  metadata        String?   // JSON string
  ipAddress       String?
  userAgent       String?

  oauthAppId      String?
  samlEnvironmentId String?

  createdAt       DateTime  @default(now())

  user            User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  oauthApp        OAuthApp? @relation(fields: [oauthAppId], references: [id], onDelete: SetNull)
  samlEnvironment SamlEnvironment? @relation(fields: [samlEnvironmentId], references: [id], onDelete: SetNull)

  @@map("audit_logs")
}
